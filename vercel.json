{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/scrapeYahoo",
      "destination": "/api/scrapeYahoo.js"
    },
    {
      "source": "/api/quoteSummary",
      "destination": "/api/quoteSummary.js"
    },
    {
      "source": "/api/stock",
      "destination": "/api/stock.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    },
    {
      "source": "/styles.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/app.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ]
}

